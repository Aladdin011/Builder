# JD Marc Limited Backend - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/jdmarc_db?schema=public"

# JWT Configuration (Generate secure random strings)
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_PROVIDER=gmail
ADMIN_EMAIL=admin@jdmarc.com

# Gmail Configuration (if using gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# SendGrid Configuration (if using sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration (if using mailgun)
MAILGUN_SMTP_LOGIN=your-mailgun-login
MAILGUN_SMTP_PASSWORD=your-mailgun-password

# AWS SES Configuration (if using ses)
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# Custom SMTP Configuration (if using custom smtp)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Ethereal Email (for development testing)
ETHEREAL_EMAIL=your-ethereal-email
ETHEREAL_PASSWORD=your-ethereal-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# Analytics & Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=info

# Production Settings (for deployment)
TRUST_PROXY=true
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Connection Pool (for production)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Example Production DATABASE_URL formats:
# PostgreSQL: postgresql://user:password@host:port/database
# Railway: Will be auto-generated
# Heroku: Will be auto-generated
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
