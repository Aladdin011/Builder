# JD Marc Limited Frontend - Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_NAME="JD Marc Limited"
VITE_APP_DESCRIPTION="Premium Construction & Engineering Services"
VITE_APP_VERSION=1.0.0

# Contact Information
VITE_COMPANY_NAME="JD Marc Limited"
VITE_COMPANY_EMAIL="info@jdmarc.com"
VITE_COMPANY_PHONE="+234 9 291 3991"
VITE_COMPANY_ADDRESS="Abuja, Nigeria"

# Social Media Links
VITE_FACEBOOK_URL="https://facebook.com/jdmarclimited"
VITE_TWITTER_URL="https://twitter.com/jdmarclimited"
VITE_LINKEDIN_URL="https://linkedin.com/company/jdmarclimited"
VITE_INSTAGRAM_URL="https://instagram.com/jdmarclimited"

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=""
VITE_GOOGLE_TAG_MANAGER_ID=""

# Maps Integration (Optional)
VITE_GOOGLE_MAPS_API_KEY=""

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true

# Theme Configuration
VITE_DEFAULT_THEME="light"
VITE_BRAND_PRIMARY_COLOR="#EE690B"
VITE_BRAND_SECONDARY_COLOR="#F7931E"

# SEO Configuration
VITE_SITE_URL="https://jdmarc.com"
VITE_SITE_TITLE="JD Marc Limited - Premium Construction Services"
VITE_SITE_DESCRIPTION="Leading construction and engineering company in Nigeria. Residential, commercial, and industrial projects with excellent craftsmanship."
VITE_SITE_KEYWORDS="construction, engineering, residential, commercial, industrial, Nigeria, Abuja"

# Error Reporting (Optional)
VITE_SENTRY_DSN=""

# Payment Integration (Optional)
VITE_STRIPE_PUBLIC_KEY=""
VITE_PAYSTACK_PUBLIC_KEY=""

# WebSocket Configuration
VITE_WEBSOCKET_URL="ws://localhost:5000"

